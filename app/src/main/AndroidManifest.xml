        android:theme="@style/AppTheme"
        android:fullBackupContent="@xml/backup_descriptor">

        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-3940256099942544~3347511713"/>

        <service
            android:name=".Background_Music.MusicServiceActivity"
            android:enabled="true" />

        <activity android:name=".Category_Levels.Marketing.MarketingBeginnerActivity" />
        <activity android:name=".Category_Levels.Marketing.MarketingProfessionalActivity" />
        <activity android:name=".Category_Levels.Marketing.MarketingWorldClassActivity" />
        <activity android:name=".Category_Levels.History.HistoryWorldClassActivity" />
