        <activity android:name=".Category_Levels.History.HistoryBeginnerActivity" />
        <activity android:name=".Category_Levels.Programming.ProgrammingBeginnerActivity" />
        <activity android:name=".Category_Levels.Programming.ProgrammingProfessionalActivity" />
