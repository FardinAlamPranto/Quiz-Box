        <activity android:name=".Category_Levels.Multimedia.MultimediaWorldClassActivity" />
        <activity android:name=".Category_Levels.Multimedia.MultimediaProfessionalActivity" />
        <activity android:name=".Category_Levels.Multimedia.MultimediaBeginnerActivity" />
        <activity android:name=".Category_Levels.All_Knowledge.AllKnowledgeQuizActivity" />
        <activity android:name=".AboutUsActivity" />
        <activity android:name=".User.UserProfileActivity" />
        <activity android:name=".MenuHomeScreenActivity" />
        <activity android:name=".User.SignUpActivity" />
        <activity android:name=".SplashScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".User.LoginActivity" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>