<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/ic_main_bg"
    tools:context="com.ayowainc.quizbox.User.SignUpActivity">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/Regloading"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="end"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="18dp"
        app:lottie_rawRes="@raw/quizbox_animation"
        app:lottie_loop="true"
        app:lottie_autoPlay="true"
        android:visibility="invisible"/>

    <ImageView
        android:id="@+id/signin_logo"
        android:transitionName="sp_image"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:layout_marginTop="5dp"
        android:layout_marginStart="15dp"
        app:srcCompat="@drawable/sigin_logo"
        android:contentDescription="TODO" />

    <TextView
        android:id="@+id/welc_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="27dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/righteous"
        android:includeFontPadding="true"
        android:text="WELCOME, "
        android:textColor="@color/dark_blue"
        android:textSize="30sp"
        android:textStyle="bold"
        android:transitionName="sp_trans1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/reg_FullName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:transitionName="full_trans"
            android:hint="Full Name"
            android:textColorHint="#5C6073"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            app:boxStrokeColor="@color/colorPrimaryDark"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="10dp"
            app:boxStrokeWidth="0.5dp"
            app:boxCornerRadiusBottomEnd="25dp"
            app:boxCornerRadiusTopStart="25dp"
            app:errorTextAppearance="@style/Error">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLength="30"
                android:maxLines="1"
                android:textColor="#5C6073"
                android:textSize="14sp" />

        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/reg_UserName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:transitionName="user_trans"
            android:hint="Username"
            android:textColorHint="#5C6073"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            app:boxStrokeColor="@color/colorPrimaryDark"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="10dp"
            app:boxStrokeWidth="0.5dp"
            app:boxCornerRadiusBottomEnd="25dp"
            app:boxCornerRadiusTopStart="25dp"
            app:errorTextAppearance="@style/Error"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLength="15"
                android:maxLines="1"
                android:textColor="#5C6073"
                android:textSize="14sp" />

        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/reg_Email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:transitionName="email_trans"
            android:hint="Email"
            android:textColorHint="@color/white"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            app:boxStrokeColor="@color/rad_rectangle_color"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="10dp"
            app:boxStrokeWidth="0.5dp"
            app:boxCornerRadiusBottomEnd="25dp"
            app:boxCornerRadiusTopStart="25dp"
            app:errorTextAppearance="@style/Error">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:maxLines="1"
                android:maxLength="40"
                android:inputType="textEmailAddress"
                />
        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/reg_PassWord"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:transitionName="pass_trans"
            android:hint="Password"
            android:textColorHint="@color/signin_txt_color"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            app:boxStrokeColor="@color/rad_rectangle_color"
            app:boxStrokeWidth="0.5dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="10dp"
            app:boxCornerRadiusBottomEnd="25dp"
            app:boxCornerRadiusTopStart="25dp"
            app:passwordToggleEnabled="true"
            app:passwordToggleTint="@color/rad_rectangle_color"
            app:errorTextAppearance="@style/Error">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:maxLength="40"
                android:maxLines="1"
                android:textColor="@color/white"
                android:textSize="14sp" />
        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <Button
            android:id="@+id/reg_SignUp"
            android:onClick="signup"
            android:transitionName="start_btn_trans"
            android:layout_width="210dp"
            android:layout_height="70dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center"
            android:background="@drawable/signup_btn"/>

        <TextView
            android:id="@+id/login_tv"
            android:transitionName="new_user_trans"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:text="@string/Already_user"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:fontFamily="@font/roboto"
            android:textStyle="bold"
            />


    </LinearLayout>



</LinearLayout>